/** @var \Mygento\Payment\Block\Info $block */
?>
<dl class="payment-method <?php echo $block->getCode(); ?>">
    <dt class="title"><?php echo $block->escapeHtml($block->getMethod()->getTitle()) ?></dt>
</dl>
<p>
    <?php if ($block->isAuthorized()): ?>
        <?php echo $block->escapeHtml(__('Order has authorized sum')); ?>
    <?php elseif ($block->isComplete()): ?>
    <?php elseif ($block->canShowPayLink()): ?>
        <a target="_blank" href="<?php echo $block->getPaylink(); ?>">
            <?php echo $block->escapeHtml(__('Pay order')); ?>
        </a>
    <?php else: ?>
        <?php echo $block->escapeHtml(__('Order is paid')); ?>
    <?php endif; ?>
</p>
<?php if ($block->getCheckUrl()) : ?>
<p>
    <a href="<?php echo $block->getCheckUrl() ?>">
        <?php echo $block->escapeHtml(__('Check payment status')); ?>
    </a>
</p>
<?php endif; ?>

